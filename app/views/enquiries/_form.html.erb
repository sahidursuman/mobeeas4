<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% f.input :enquiry_type %>
    <%= f.input :name, label: 'Your name' %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :company %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <button type="submit" class="btn margin-top-10px margin-bottom-10px">Submit Enquiry</button>
  </div>
<% end %>

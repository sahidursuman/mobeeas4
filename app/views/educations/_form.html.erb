<%= simple_form_for(@education) do |f| %>
  <%= f.error_notification %>

  <div class="input-field">
    <%= f.input :institution, label: 'High School/University/College', label_input: { class: 'active'} %>
  </div>
  <div class="input-field">
    <%= f.input :course, label: 'Course/Degree' %>
  </div>
  <div class="input-field">
    <%= f.input :year_completed, label: 'Year completed (past or future)' %>
  </div>  

  <p>By clicking 'Create Education', I agree to allow MOBEEAS representatives to confirm my enrolment at this educational institution.
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

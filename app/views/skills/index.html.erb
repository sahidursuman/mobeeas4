<p id="notice"><%= notice %></p>

<h1>Skills</h1>
<%= link_to 'New Skill', new_skill_path, class: 'btn' %>
<ul class="collapsible" data-collapsible="accordion">
<% @skill_categories.each do |category| %>
    <li>
      <div class="collapsible-header"><%= category.name %></div>
      <div class="collapsible-body">
<table>
  <thead>
    <tr>
      
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% category.skills.each do |skill| %>
      <tr>
        
        <td><%= skill.name %></td>
        <td><%= skill.description %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
</div>
</li>
</ul>

<%= link_to 'New Skill', new_skill_path %>

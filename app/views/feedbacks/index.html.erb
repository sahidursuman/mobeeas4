<div class="row">
  <div class="col s12 m11 offset-m1 l11 offset-l1">
    <%= render 'layouts/sidebar' %>
    <p id="notice"><%= notice %></p>

    <h4>Listing Feedbacks</h4>

    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Message</th>
          <th>Picture</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @feedbacks.each do |feedback| %>
          <tr>
            <td><%= feedback.user.id %></td>
            <td><%= feedback.message %></td>
            <% if feedback.picture_url.present? %>
              <td><%= link_to 'Download', feedback.picture_url %></td>
            <% else %>
              <td>None</td>
            <% end %>
            <td><%= link_to 'Show', feedback %></td>
            <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
            <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>

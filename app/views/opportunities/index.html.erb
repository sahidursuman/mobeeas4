<div class="row">
  <div class="col c12 m8 offset-m2 l8 offset-l2">
    <%= render 'layouts/sidebar' %>

    <p id="notice"><%= notice %></p>

    <h1>Listing Opportunities</h1>

    <table>
      <thead>
        <tr>
          <th>Organisation</th>
          <th>User</th>
          <th>Opportunity status</th>
          <th>Name</th>
          <th>Tagline</th>
          <th>Info</th>
          <th>Planned start date</th>
          <th>Duration</th>
          <th>Pay</th>
          <th>Commencement date</th>
          <th>Completion date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @opportunities.each do |opportunity| %>
          <tr>
            <td><%= opportunity.organisation %></td>
            <td><%= opportunity.user %></td>
            <td><%= opportunity.opportunity_status %></td>
            <td><%= opportunity.name %></td>
            <td><%= opportunity.tagline %></td>
            <td><%= opportunity.info %></td>
            <td><%= opportunity.planned_start_date %></td>
            <td><%= opportunity.duration %></td>
            <td><%= opportunity.pay %></td>
            <td><%= opportunity.commencement_date %></td>
            <td><%= opportunity.completion_date %></td>
            <td><%= link_to 'Show', opportunity %></td>
            <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
            <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Opportunity', new_opportunity_path %>
  </div>
</div>

<p><strong>Please Enter Time and Either Schedule or Date:</strong></p>

<% @opportunity_time = OpportunityTime.new(opportunity_id: @opportunity.id) %>
<% @opportunity_time.opportunity_id = @opportunity.id %>

<%= simple_form_for(@opportunity_time) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="row">
      <div class="col s3 m3 l3">
        <p>Start Time</p>
        <%# fix the start_time from the opportunity_times table %>
        <div class="border-top">
          <%#= f.input :time, as: :string, label: 'Time', input_html: { class: 'datetimepicker2'}  %>
        </div>
      </div>
      <p>End Time</p>
      <%# fix the end_time from the opportunity_times table %>
        <div class="border-top">
          <%#= f.input :time, as: :string, label: 'Time', input_html: { class: 'datetimepicker2'}  %>
        </div>
      </div>

        <div class="col s6 m6 l6">
          <p>Schedule</p>
            <div class="border-top">
            <div class="col s6 m6 l6">
              <%= f.input :day, collection: [ "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" ]  %>
            </div>
            <div class="col s6 m6 l6">
              <%= f.input :frequency, collection: [ "daily weekdays", "weekly", "fortnightly", "monthly" ], value: [ "daily weekdays", "weekly", "fortnightly", "monthly" ] %>
            </div>
          </div>
        </div>

      <div class="col s3 m3 l3">
          <p>Start Date (and end_date here too)</p>
          <%# fix this to get the start_date AND end_date data from opportunity_times table %>
          <div class="border-top">
            <%#= f.input :date_time, as: :string, label: 'Date:', input_html: { class: 'datetimepicker1', :format => "%d/%m/%Y  %I:%m %p"} %>
          </div>
      </div>

    </div><%# end of row %>

    <%= hidden_field_tag(:opportunity_id, @opportunity.id)%>
      <%= f.association :opportunity, :as => :hidden, input_html: { value: @opportunity.id }, class: 'right'  %>
  </div>
  <br><br><br>
<%# The submit button below will appear in the modal button instead. %>
  <div class="form-actions">
    <%= f.button :submit, "Save This Schedule" %>
  </div>
<% end %>

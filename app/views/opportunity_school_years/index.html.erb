<p id="notice"><%= notice %></p>

<h1>Listing Opportunity School Years</h1>

<table>
  <thead>
    <tr>
      <th>Opportunity</th>
      <th>School year</th>
      <th>Number of students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunity_school_years.each do |opportunity_school_year| %>
      <tr>
        <td><%= opportunity_school_year.opportunity %></td>
        <td><%= opportunity_school_year.school_year %></td>
        <td><%= opportunity_school_year.number_of_students %></td>
        <td><%= link_to 'Show', opportunity_school_year %></td>
        <td><%= link_to 'Edit', edit_opportunity_school_year_path(opportunity_school_year) %></td>
        <td><%= link_to 'Destroy', opportunity_school_year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Listing Org Users</h1>

<table>
  <thead>
    <tr>
      <th>Admin status</th>
      <th>Verified status</th>
      <th>Organisation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @org_users.each do |org_user| %>
      <tr>
        <td><%= org_user.admin_status %></td>
        <td><%= org_user.verified_status %></td>
        <td><%= org_user.organisation %></td>
        <td><%= org_user.user %></td>
        <td><%= link_to 'Show', org_user %></td>
        <td><%= link_to 'Edit', edit_org_user_path(org_user) %></td>
        <td><%= link_to 'Destroy', org_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h4>Edit <%= resource_name.to_s.humanize %></h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <!-- <label for="current_password">Current Password (min. 8 characters)</label> -->
    <%= f.input :current_password, label: "Current Password (min. 8 characters)", hint: "We need your current password to confirm your changes. ", required: true %>
    <br><br>
    <!-- <label for="password">Password (min. 8 characters)</label> -->
    <%= f.input :password, label: "Password (min. 8 characters)", autocomplete: "off", hint: "Leave it blank if you don't want to change it. ", required: false %>
    <!-- <label for="password_confirmation">Password Confirmation (min. 8 characters)</label> -->
    <%= f.input :password_confirmation, label: "Password Confirmation (min. 8 characters)", required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>


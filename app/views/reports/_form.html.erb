<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :opportunity %>
    <%= f.input :type %>
    <%= f.input :relevant_knowledge %>
    <%= f.input :relevant_knowledge_comment %>
    <%= f.input :punctual %>
    <%= f.input :punctual_comment %>
    <%= f.input :communication %>
    <%= f.input :communication_comment %>
    <%= f.input :enthusiasm %>
    <%= f.input :enthusiasm_comment %>
    <%= f.input :professionalism %>
    <%= f.input :professionalism_comment %>
    <%= f.input :stength %>
    <%= f.input :further_dev %>
    <%= f.input :general_comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div class="row">
  <div class="col s12 m11 offset-m1 l11 offset-l1">
    <%= render 'layouts/sidebar' %>
    <p id="notice"><%= notice %></p>

    <h4>Listing Reports</h4>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Organisation</th>
          <th>Candidate</th>
          <th>Report Type</th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.opportunity.id %></td>
            <td>
              <% if report.opportunity.organisation.name.present? %>
                <%= report.opportunity.organisation.name %>
              <% end %>
            </td>
            <% @candidate = Profile.find(report.profile_id) %>
            <td><%= @candidate.name %></td>
            <td><%= report.report_type %></td>
            <td><%= link_to 'Show', report %></td>
            <td><%= link_to 'Edit', edit_report_path(report) %></td>
            <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

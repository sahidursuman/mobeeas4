<p id="notice"><%= notice %></p>

<h1>Listing Token Purchases</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Organisation</th>
      <th>Number of tokens</th>
      <th>Token price</th>
      <th>Payment total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @token_purchases.each do |token_purchase| %>
      <tr>
        <td><%= token_purchase.user %></td>
        <td><%= token_purchase.organisation %></td>
        <td><%= token_purchase.number_of_tokens %></td>
        <td><%= token_purchase.token_price %></td>
        <td><%= token_purchase.payment_total %></td>
        <td><%= link_to 'Show', token_purchase %></td>
        <td><%= link_to 'Edit', edit_token_purchase_path(token_purchase) %></td>
        <td><%= link_to 'Destroy', token_purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


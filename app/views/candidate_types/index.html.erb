<p id="notice"><%= notice %></p>

<h1>Listing Candidate Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidate_types.each do |candidate_type| %>
      <tr>
        <td><%= candidate_type.name %></td>
        <td><%= candidate_type.description %></td>
        <td><%= link_to 'Show', candidate_type %></td>
        <td><%= link_to 'Edit', edit_candidate_type_path(candidate_type) %></td>
        <td><%= link_to 'Destroy', candidate_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


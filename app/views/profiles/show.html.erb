<p id="notice"><%= notice %></p>

<div class="row">
  <!-- PROFILE -->
  <div class="col m4">
    <div class="card">
      <%= render 'profiles/my_profile' %>
    </div>
  </div>

<!-- RIGHT COLUMN -->
  <div class="col m8">
    <!-- WELCOME BUTTON-->
    <p>
      <a class="waves-effect waves-light btn modal-trigger" href="#modal-welcome"><i class="fa fa-comment"></i>  Getting Started</a>
      <a class="waves-effect waves-light btn modal-trigger" href="/messages?my_id=<%= current_user.id %>"><i class="fa fa-envelope"></i>  Mailbox</a>
    </p>
      <div id="modal-welcome" class="modal">
        <div class="modal-content">
          <%= render 'profiles/welcome' %>
        </div>
        <div class="modal-footer">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
        </div>
      </div>
  <% if !(@profile.approved) %>
    <!-- appears only if the candidate status is not approved by admin therefore the candidate's profile will not appear in MOBEEAS website -->
    <div class="card light-amber">
      <div class="card-content">
        <p>
          Your Profile detail is incomplete or not approved, therefore currently is not available to participate in any MOBEEAS opportunity.
          <br>
          Please contact MOBEEAS Admin on <strong>info@mobeeas.com</strong> for further information.</p>
      </div>
    </div>
    <%# if cu%>
  <% end %><!-- end if !(@profile.approved) -->

  <!-- AGREEMENTS -->
  <div class="card">
      <%= render 'profiles/agreements' %>
  </div>
  <!-- SKILLS -->
    <div class="card">
      <%= render 'profiles/skills' %>
    </div>
    <!-- EDUCATION -->
    <div class="card">
      <%= render 'profiles/education' %>
    </div>
    <!-- SECURITY CHECKS -->
    <div class="card">
      <%= render 'profiles/checks' %>
    </div>
  </div>
</div>

<!-- SECURITY CHECK INFO MODAL -->
<div id="modal-checks" class="modal modal-fixed-footer">
  <div class="modal-content">
    <%= render 'layouts/security_checks' %>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>

<!-- AGREEMENTS MODALS -->
  <!-- ETHICS -->
  <div id="modal-ethics" class="modal modal-fixed-footer">
    <div class="modal-content">
      <%= render 'profiles/ethics_agreement' %>
    </div>

    <% if @agreement.present? %>
      <% if !@agreement.ethics %>
        <div class="modal-footer">
          <%= link_to 'I Agree', agree_to_agreement_path(@agreement, agreement_type: 'ethics'), class: "modal-action modal-close waves-effect waves-green btn-flat" %>
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">I Disagree</a>
        </div>
      <% else %>
        <div class="modal-footer">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- CODE OF CONDUCT -->
  <div id="modal-conduct" class="modal modal-fixed-footer">
    <div class="modal-content">
      <%= render 'profiles/code_of_conduct_agreement' %>
    </div>

    <% if @agreement.present? %>
      <% if !@agreement.code_of_conduct %>
        <div class="modal-footer">
          <%= link_to 'I Agree', agree_to_agreement_path(@agreement, agreement_type: 'code_of_conduct'), class: "modal-action modal-close waves-effect waves-green btn-flat" %>
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">I Disagree</a>
        </div>
        <% else %>
          <div class="modal-footer">
            <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
          </div>
      <% end %>
    <% end %>
  </div>


  <!-- TERMS & CONDITIONS -->
  <div id="modal-terms-cond" class="modal modal-fixed-footer">
    <div class="modal-content">
      <%= render 'profiles/terms_agreement' %>
    </div>

    <% if @agreement.present? %>
      <% if !@agreement.terms %>
        <div class="modal-footer">
          <%= link_to 'I Agree', agree_to_agreement_path(@agreement, agreement_type: 'terms'), class: "modal-action modal-close waves-effect waves-green btn-flat" %>
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">I Disagree</a>
        </div>
        <% else %>
          <div class="modal-footer">
            <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
          </div>
      <% end %>
    <% end %>
  </div>
